<UserControl x:Class="CustomDeliveryNoteDemo.NoteMaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomDeliveryNoteDemo"
             mc:Ignorable="d"  
             d:DesignHeight="655" d:DesignWidth="1015" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="245"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="115"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="145"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="145"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="145"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="22"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Column="0"
                   Grid.Row="0"                   
                   Content="Recipient:"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Center"
                   Padding="0"
                   FontSize="12"/>

            <ComboBox Grid.Column="2"
                      Grid.Row="0"
                      Name="cmbreccode"
                      Style="{StaticResource DeliveryNoteComboBoxTemplate}"
                      DisplayMemberPath="Name"
                      AlternationCount="2"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      FontSize="12"                                                
                      IsSynchronizedWithCurrentItem="True"/>

            <Label Grid.Column="0"
                   Grid.Row="2"                   
                   Content="Country:"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Center"
                   Padding="0"
                   FontSize="12"/>

            <TextBox Grid.Column="2"
                     Grid.Row="2"
                     Template="{StaticResource DeliveryNoteTextBoxTemplate}"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Left"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     VerticalAlignment="Center"/>

            <Label Grid.Column="0"
                   Grid.Row="4"                   
                   Content="ZIP code:"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Center"
                   Padding="0"
                   FontSize="12"/>

            <TextBox Grid.Column="2"
                     Grid.Row="4"
                     Template="{StaticResource DeliveryNoteTextBoxTemplate}"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Left"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     VerticalAlignment="Center"/>

            <Label Grid.Column="0"
                   Grid.Row="6"                   
                   Content="City:"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Center"
                   Padding="0"
                   FontSize="12"/>

            <TextBox Grid.Column="2"
                     Grid.Row="6"
                     Template="{StaticResource DeliveryNoteTextBoxTemplate}"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Left"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     VerticalAlignment="Center"/>

            <Label Grid.Column="0"
                   Grid.Row="8"                   
                   Content="Address:"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Center"
                   Padding="0"
                   FontSize="12"/>

            <TextBox Grid.Column="2"
                     Grid.Row="8"
                     Template="{StaticResource DeliveryNoteTextBoxTemplate}"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Left"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     VerticalAlignment="Center"/>

        </Grid>
    </Grid>
</UserControl>
